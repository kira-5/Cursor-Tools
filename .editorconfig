# EditorConfig - http://editorconfig.org
# This file helps maintain consistent coding styles for multiple developers
# working on the same project using various IDEs and editors.

root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120

[*.py]
indent_style = space
indent_size = 4
max_line_length = 120

[Makefile]
indent_style = tab

[*.{yml,yaml}]
indent_size = 2

[*.{md,markdown}]
trim_trailing_whitespace = false
insert_final_newline = true
max_line_length = off

[*.{json}]
indent_size = 4

[Dockerfile]
indent_size = 4
